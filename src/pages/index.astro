---
import CSS from '../components/CSS.astro'
import * as radix from '../assets/radix-colors.js'
import * as fs from 'node:fs/promises'

let cssURL = new URL('../assets/global.pcss', import.meta.url)
---
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<CSS from={cssURL} with={{
		...radix.colors,
		fontSize6: 21n,
		fontSize9: 60n,
		lineSize6: 30n,
		lineSize9: 60n,
		space5: 25n,
	}} />
	<title>Astro</title>
</head>

<body>
	<header>
		<h1>
			A gorgeous, accessible color system
		</h1>
		<p>
			An open-source color system for designing beautiful, accessible websites and apps.
		</p>
	</header>
</body>

</html>
